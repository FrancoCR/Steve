def steve_voice(wav_filename, chunk_size=CHUNKSIZE):

    # Open the wav file in read-only mode
    f = wave.open(wav_filename, "rb")

    p = pyaudio.PyAudio()

    # Open the data stream
    stream = p.open(format=p.get_format_from_width(f.getsampwidth()),
                    channels=f.getnchannels(),
                    rate=f.getframerate(),
                    output=True)

    # Read data
    data = f.readframes(chunk_size)

    # Play
    while data != "":
        stream.write(data)
        data = f.readframes(chunk_size)

    # Stop data flow
    stream.stop_stream()
    stream.close()

    # Close PyAudio
    p.terminate()
